{
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/dist",
    "framework": null,
    "functions": {
        "api/index.js": {
            "maxDuration": 60
        }
    },
    "rewrites": [
        {
            "source": "/api/:path(.*)",
            "destination": "/api?route=:path"
        },
        {
            "source": "/((?!api).*)",
            "destination": "/index.html"
        }
    ]
}